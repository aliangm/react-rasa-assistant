{
    "env": {
        "es6": true,
        "commonjs": true
    },
    "parserOptions": {
        "ecmaVersion": 9
    },
    "extends": "eslint:recommended",
    "rules": {
        "max-len": [2, 80],
        "indent": [2, 4],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "semi": [1, "never"],
        "no-console": 0,
        "comma-dangle": [2, "always-multiline"],
        "object-curly-spacing": [2, "never"],
        "array-bracket-spacing": [2, "never"],
        "keyword-spacing": 2,
        "quote-props": [1, "consistent-as-needed"]
    }
}
